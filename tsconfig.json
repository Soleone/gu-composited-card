{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["core-js", "node"],
    "lib": ["dom", "es2015", "es2016", "es2017"]
  },
  "exclude": ["node_modules", "dist"],
}
